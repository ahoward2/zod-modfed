{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ahowardtech/checkout/*": [
        "@mf-types/@ahowardtech/*",
        "@mf-types/@ahowardtech/checkout/_types/*",
        "@mf-types/@ahowardtech/checkout/_types/components/*",
        "@mf-types/@ahowardtech/checkout/_types/components/Cart/*"
      ]
    },
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "lib": ["es7", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
